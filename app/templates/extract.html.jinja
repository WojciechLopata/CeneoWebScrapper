{% extends "base.html.jinja" %}

{% block content %}
<p>bierzemy informajce o produkcie</p>
{% if error %}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
  <i clas="bi bi-heartbreak-fill"></i>
  <strong>Nie działa </strong> Coś zepsułeś: {{error}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{% endif %}
</div>
<form action="{{url_for('extraction')}}" method="POST" >
<div class="row g-3 align-items-center content-justify-center">
    <div class="col-auto">
      <label for="product_id" class="col-form-label">kod produktu</label>
    </div>
    <div class="col-auto">
      <input type="text" id="product_id" class="form-control" name="product_id">
    </div>
    <div class="col-auto">
        <input type="submit" class="btn btn-pink" value="Pobierz">
    
    </div>
  </div>
</form>
{% endblock content %}